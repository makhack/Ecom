{% extends 'base.html.twig' %}

{% block body %}
    <h1>Diaporama</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ diaporama.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ diaporama.name }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if diaporama.createdAt %}{{ diaporama.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if diaporama.updatedAt %}{{ diaporama.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('diaporama_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('diaporama_edit', { 'id': diaporama.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
