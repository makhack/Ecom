{% block javascripts %}
{{ parent()}}
  <script>
$(document).ready(function(){

  var imgs = $(".carou").find(".carousel");

  $.each(imgs,function(i,v) {
    $(v).carousel({
      interval: false,
      pause: null
    });
    $(v).carousel('pause');


    $(v).hover(function(event){
      
      $(this).data("bs.carousel").options.interval =  200;
      setTimeout(function(){
        $(v).data("bs.carousel").options.interval =  2000;
      }, 200);
      $(this).carousel('cycle');

    },function(event){
      $(this).carousel(0);
      $(this).carousel('pause');



    });

  });
});
</script>
{% endblock %}

